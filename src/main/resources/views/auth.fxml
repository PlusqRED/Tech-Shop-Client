<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-color: #2E3F7F;" xmlns="http://javafx.com/javafx/11.0.1">
    <children>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#2f2f2f" height="54.0" layoutX="225.0" layoutY="95.0"
                   stroke="BLACK" strokeType="INSIDE" width="350.0"/>
        <VBox layoutX="170.0" layoutY="103.0" spacing="50.0">
            <children>
                <Label alignment="CENTER" prefHeight="34.0" prefWidth="460.0" text="Авторизация" textAlignment="CENTER"
                       textFill="WHITE">
                    <font>
                        <Font size="27.0"/>
                    </font>
                </Label>
                <JFXTextField fx:id="login_tf" prefWidth="300.0" promptText="Введите логин"
                              style="-fx-background-color: #242240; -fx-text-inner-color: #ffffff;">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </JFXTextField>
                <JFXPasswordField fx:id="password_tf" focusColor="WHITE" prefWidth="300.0" promptText="Введите пароль"
                                  style="-fx-background-color: #242240; -fx-text-inner-color: #ffffff;"
                                  unFocusColor="WHITE">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </JFXPasswordField>
                <HBox spacing="30.0">
                    <children>
                        <JFXButton onAction="#signIn" prefWidth="200.0" style="-fx-background-color: #aaffaa;"
                                   text="Войти">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </JFXButton>
                        <JFXButton onAction="#signUp" prefHeight="33.0" prefWidth="229.0"
                                   style="-fx-background-color: #ffccaa;" text="Зарегистрироваться">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </JFXButton>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
